<div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1 class="text-center login-title">Sign in to Death By a Thousand Cuts</h1>
            <div class="account-wall">
                <img class="profile-img" src="/assets/ContinuumGlobal-logo.jpg" alt="">
                <!-- <form class="form-signin"> -->
                <%= form_tag sessions_path , :class => 'form-signin' do %>  
                <input class="form-control" placeholder="User Name" required autofocus="" type="text" name = "user_name">
                <input class="form-control" placeholder="Password" required type="password" name = "password">
                <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
                       <a href="#" class="pull-right need-help">For help please contact Admin </a><span class="clearfix"></span>
                <% end %>    
            </div>
        </div>
    </div>