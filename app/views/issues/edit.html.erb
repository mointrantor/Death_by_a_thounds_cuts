<style type="text/css">
	.span_head{
		padding: 10px;
		color: #3276B1;
		font-size: 17px;
	}	
#issues_dateResolved{
	top: 0;
	left: 0;
	padding: 4px;
	margin-top: 1px;
	-webkit-border-radius: 4px;
	-moz-border-radius: 4px;
	border-radius: 4px;
}
</style>
<div class="panel panel-primary">
	<div class="panel-heading">
		<h3 class="panel-title">Update Issue</h3>
	</div>
	<div class="panel-body">
		<%=form_for(@object_issues)  do |f| %>  
		<div class="control-group">
			<div class="col-sm-12"> 
				<div class="col-sm-4">
					<label class="" for="input01">Project</label>  
					<div class="s">
						<%=f.text_field :Project, :required => 'required'%>  
						<%=hidden_field_tag :project , params[:project] %>
					</div> 
				</div>
				<div class="col-sm-4">
					<label class="" for="input01">Description</label>  
					<div class="">
						<%=f.text_area :Description , :required => 'required' , :rows=>"3" , :style => "width: 100%;" %>
					</div> 
				</div>
				<div class="col-sm-4">
					<label class="" for="input01">MitigationPlan</label>  
					<div class="">
						<%=f.text_area :mitigationPlan , :rows=>"3" , :style => "width: 100%;" %>
					</div> 
				</div>
			</div>
			<div class="col-sm-12"> 
				<div class="col-sm-4">
					<label class="" for="input01">DateIdentified</label>  
					<div class="s">
						<%=f.text_field :dateIdentified , :required => 'required' ,:readonly => true, :class=>"datepicker"%>  
					</div> 
				</div>
				<div class="col-sm-4">
					<label class="" for="input01">DateResolved</label>  
					<div class="">  
						<%=f.text_field :dateResolved ,:readonly => true%>
					</div> 
				</div>
				<div class="col-sm-4">
					<label class="" for="input01">Status</label>  
					<div class="">
						<%= f.select :Status, options_for_select([["OPEN","OPEN"],["IN-PROGRESS","IN-PROGRESS"],["CLOSED","CLOSED"]], :selected => @object_issues.Status)%>  
					</div> 
				</div>
			</div>
			<div class="col-sm-12"> 
				<div class="col-sm-4">
					<label class="" for="input01">Severity</label>  
					<div class="">
						<%= f.select :Severity, options_for_select([["LOW","LOW"],["MEDIUM","MEDIUM"],["HIGH","HIGH"]],:selected => @object_issues.Severity) %>   
					</div> 
				</div>
				<div class="col-sm-4">
					<label class="" for="input01">Assigned To</label>
					<div class="s">  
						<%if current_user.isAdmin%> 
						<%= f.select :assignedTo, options_for_select([['Please Select','Please Select']] + @users,:selected => @object_issues.assignedTo)%>
						<%else%>
						<%= f.select :assignedTo, options_for_select([[@object_issues.assignedTo,@object_issues.assignedTo]])%>
						<%end%>
					</div>
				</div>
				<div class="col-sm-4">
					<%if current_user.isAdmin%>
					<label class="" for="input01">Is Management Issue</label>
					<%=f.check_box :isManagementIssue %>
					<!-- <input type="checkbox" id="ismanageable" > -->
					<%end%>
				</div>
			</div>
			<div class="col-sm-12"> 
				<div class="col-sm-8">
					<label class="" for="input01">Comments</label>  
					<div class="">
						<%=text_area_tag "issues[CommentsArray]" ,nil, :rows =>"3", :cols => "50" , :style => "width: 100%;" %>
					</div>
				</div>
				<!-- <div class="col-sm-4">

				</div> -->
				<div class="col-sm-4">
					<button type="submit" class="btn btn-primary"  style="margin-top: 23px;" >Update</button>
					<%=link_to "Cancel" , '/' , :class => "btn btn-primary" , :style =>"margin-top: 23px;"%>
				</div>
				
			</div>   
			<div class="col-sm-12" style="margin-left: 15px;"> 
				<div class="">
					<% if !@object_issues.CommentsArray.blank? || @object_issues.CommentsArray.class == Array %>
					<h4 style="padding: 7px;background: #CCC;">Following are the audit trails.</h4>
					<%@object_issues.CommentsArray.each do |comment|%>
					<%data = comment[1].split(' ')%>
					<span ><span style = "color: #428BCA;">Audit Trail For :</span><b><%= "#{data[4]} #{data[5]}" %></b></span><br/>
					<span ><span style = "color: #428BCA;">Created By      :</span> <b><%= "#{data[2]}" %></b></span><br/>
					<span ><span style = "color: #428BCA;">Note		 	  		 :</span> <%= comment[0] %></span>
					<hr/>
					<%end%>
					<%end%>
				</div>
			</div> 

		</div>  
		<%end%>  
	</div>
</div>