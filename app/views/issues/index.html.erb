<fieldset class="fieldset">
	<legend>Issues</legend>
	<div class="row-fluid">
			<fieldset class="fieldset">
				<legend>Projects</legend>
				<div class="col-sm-4">
					<%= select_tag 'project_list_drop', options_for_select(project_list(@projects)) , :style=>"margin-top: 8px; margin-right: 10px; width: 38%;" %>
					<%=link_to "Create new issue" , '#' , :class => "btn btn-primary create_new_issue" %>
				</div>
				<div class="col-sm-8">
					
				</div>

				<input type="hidden" id="issue_user_name" value=<%= current_user.username %>>
				<div class="col-sm-12" style = "margin-top: 10px;">
					<div class="collapse" id="new_issue_div">
						<%=render "create"%>	
					</div>
				</div>
			</fieldset>
			<%= render "project_list"%>	
	</div>  
</fieldset>
